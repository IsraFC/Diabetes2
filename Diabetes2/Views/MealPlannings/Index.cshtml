@model IEnumerable<Diabetes2.Data.Entities.MealPlanning>

@{
    ViewData["Title"] = "Plan alimentario";
}

<h1>Plan alimentario</h1>

<p>
    <a asp-action="Create">Registrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PMealPlans)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Recipes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PMealPlans)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
